<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/livewallpaper_back" >

    <Button
        android:id="@+id/btn_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/widget_cleaner_broom" />

    <com.kince.progressrectangle.ProgressRectangle
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_increment"
        android:layout_alignTop="@+id/btn_increment"
        android:layout_toLeftOf="@+id/btn_increment"
        android:padding="20dp" />

</RelativeLayout>